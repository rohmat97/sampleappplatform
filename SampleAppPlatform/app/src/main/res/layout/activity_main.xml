<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="view"
            type="com.example.sampleappplatform.presentation.MainView" />

        <variable
            name="vm"
            type="com.example.sampleappplatform.presentation.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="@dimen/margin_very_large"
                android:focusable="true">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textLayout_app_id"
                    style="@style/InputLayout.Shrine.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/textInput_app_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/galano_grotesque"
                        android:hint="@string/fn_app_id"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/text_normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textLayout_app_key"
                    style="@style/InputLayout.Shrine.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    app:layout_constraintTop_toBottomOf="@+id/textLayout_app_id">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/textInput_app_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/galano_grotesque"
                        android:hint="@string/fn_app_key"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/text_normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textLayout_access_token_expired"
                    style="@style/InputLayout.Shrine.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    app:layout_constraintTop_toBottomOf="@+id/textLayout_app_key">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/textInput_access_token_expired"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/galano_grotesque"
                        android:hint="@string/fn_access_token_expired"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="@dimen/text_normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button_generate_token"
                    style="@style/ButtonRedPurpleGradient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/action_generate_token"
                    android:textAllCaps="true"
                    android:onClick="@{view::onClickGenerateToken}"
                    app:layout_constraintTop_toBottomOf="@+id/textLayout_access_token_expired" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_platform_createjoin"
                    style="@style/TitleBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/text_create_join"
                    android:textSize="@dimen/text_title_activity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_generate_token" />

                <RadioGroup
                    android:id="@+id/radio_group_createjoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_platform_createjoin">

                    <RadioButton
                        android:id="@+id/radio_button_create"
                        style="@style/RegularText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textSize="@dimen/text_14sp"
                        android:text="@string/text_create" />

                    <RadioButton
                        android:id="@+id/radio_button_join"
                        style="@style/RegularText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:textSize="@dimen/text_14sp"
                        android:text="@string/text_join" />

                </RadioGroup>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_platform_language"
                    style="@style/TitleBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/text_platform_language"
                    android:textSize="@dimen/text_title_activity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_createjoin" />

                <RadioGroup
                    android:id="@+id/radio_group_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_platform_language">

                    <RadioButton
                        android:id="@+id/radio_button_english"
                        style="@style/RegularText"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textSize="@dimen/text_14sp"
                        android:text="@string/text_language_english" />

                    <RadioButton
                        android:id="@+id/radio_button_indonesia"
                        style="@style/RegularText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:textSize="@dimen/text_14sp"
                        android:text="@string/text_language_indonesia" />

                </RadioGroup>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_special_user"
                    style="@style/TitleBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/text_special_user"
                    android:textSize="@dimen/text_title_activity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_language" />

                <RadioGroup
                    android:id="@+id/radio_group_special_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_special_user">

                    <RadioButton
                        android:id="@+id/radio_button_yes"
                        style="@style/RegularText"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textSize="@dimen/text_14sp"
                        android:text="@string/text_yes" />

                    <RadioButton
                        android:id="@+id/radio_button_no"
                        style="@style/RegularText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:textSize="@dimen/text_14sp"
                        android:text="@string/text_no" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textLayout_title"
                    style="@style/InputLayout.Shrine.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_special_user">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/textInput_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/galano_grotesque"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/text_normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button_submit"
                    style="@style/ButtonRedPurpleGradient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_page"
                    android:text="@string/action_submit"
                    android:textAllCaps="true"
                    android:onClick="@{view::onClickSubmit}"
                    app:layout_constraintTop_toBottomOf="@+id/textLayout_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <com.example.sampleappplatform.framework.design.LoadingView
                    android:id="@+id/loading_view"
                    style="@style/RegularFont"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="@{vm.showLoadingView ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/button_generate_token"
                    app:layout_constraintBottom_toTopOf="@+id/button_submit"
                    app:layout_constraintVertical_weight="1"
                    app:onRetryListener="@{view.retryListener}"
                    tools:visibility="gone" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>